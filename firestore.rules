
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;

      match /correct-answers/{answerId} {
        allow create, read, delete: if request.auth.uid == userId;
      }
      match /incorrect-answers/{answerId} {
        allow create, read, delete: if request.auth.uid == userId;
      }
    }

    match /game-sets/{gameSetId} {
      allow read: if resource.data.isPublic == true || request.auth.uid == resource.data.creatorId;
      allow update, delete: if request.auth.uid == resource.data.creatorId;
      allow create: if request.auth.uid != null;
    }

    match /game-rooms/{roomId} {
      allow read, create: if request.auth.uid != null;
      allow update: if request.auth.uid in resource.data.players;
    }
  }
}
