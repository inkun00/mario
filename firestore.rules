
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to read any user's profile for nickname/XP lookups.
      allow read: if request.auth != null;
      // Only allow a user to write to their own profile.
      allow write: if request.auth.uid == userId;

      // Users can only manage their own answer records.
      match /correct-answers/{answerId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /incorrect-answers/{answerId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /game-sets/{gameSetId} {
      // Public game-sets can be read by anyone.
      // Private game-sets can only be read by the creator.
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.creatorId);
      
      // Allow create if the user is logged in and the creatorId matches their uid.
      allow create: if request.auth != null && request.resource.data.creatorId == request.auth.uid;

      // Allow update and delete only by the creator.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.creatorId;
    }

    match /game-rooms/{roomId} {
      // Anyone authenticated can read a game room.
      allow read: if request.auth != null;
      
      // Allow creation by any authenticated user.
      allow create: if request.auth != null;

      // Allow anyone to update a game room during play.
      allow update: if request.auth != null;
    }
  }
}
