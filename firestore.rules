rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write to their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /correct-answers/{answerId} {
        // Allow users to manage their own correct answers
        allow create, get, list, delete: if request.auth != null && request.auth.uid == userId;
      }

      match /incorrect-answers/{answerId} {
        // Allow users to manage their own incorrect answers
        allow create, get, list, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /game-sets/{gameSetId} {
      // Anyone can read game sets
      allow get, list: if request.auth != null;
      // Anyone can create a game set
      allow create: if request.auth != null;
      // Only the creator can update or delete their game set
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.creatorId;
    }

    match /game-rooms/{gameRoomId} {
        // Anyone authenticated can read game rooms
        allow get, list: if request.auth != null;
        // Anyone authenticated can create a game room
        allow create: if request.auth != null;
        // Anyone can update a game room (for gameplay)
        allow update: if request.auth != null;
    }
  }
}
