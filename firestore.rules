rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: Can only read/write their own data. Cannot list other users.
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // User Subcollections: Can only manage their own answer history.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Game-sets:
    // read: Anyone authenticated can read.
    // write: Only the creator can create, update, or delete their own sets.
    match /game-sets/{gameSetId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && request.resource.data.creatorId == request.auth.uid;
    }

    // Game-rooms:
    // read/create: Anyone authenticated can read or create a room.
    // update: Only the host or a player in the game can update the room.
    match /game-rooms/{roomId} {
      allow read, create: if request.auth.uid != null;
      allow update: if request.auth.uid != null && (request.auth.uid == resource.data.hostId || request.auth.uid in resource.data.players);
    }
  }
}
