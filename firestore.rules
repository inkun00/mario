rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    match /game-sets/{gameSetId} {
      allow read: if request.auth != null && (resource.data.isPublic == true || request.auth.uid == resource.data.creatorId);
      allow create: if request.auth != null;
      // Combine update rules into one to allow either full update by owner or playCount update by anyone.
      allow update: if request.auth != null && 
                      (request.auth.uid == resource.data.creatorId || 
                      (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['playCount']) &&
                       request.resource.data.playCount == resource.data.playCount + 1));
      allow delete: if request.auth != null && request.auth.uid == resource.data.creatorId;
    }
    
    match /game-rooms/{gameRoomId} {
      allow read, create, update: if request.auth != null;
    }

    match /users/{userId}/correct-answers/{answerId} {
      allow read, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/incorrect-answers/{answerId} {
      allow read, create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
