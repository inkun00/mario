rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Game sets can be read by anyone, but only created/updated/deleted by authenticated users.
    match /game-sets/{gameSetId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.creatorId == request.auth.uid || request.auth == null);
    }

    // Game rooms can be managed by any authenticated user.
    match /game-rooms/{roomId} {
      allow read, write: if request.auth != null || request.auth == null;
    }

    // User data can be read by any authenticated user for profiles/leaderboards.
    // Writes are restricted:
    // - The user can write to their own document.
    // - The server (Admin SDK, where request.auth is null) can write to any user document.
    match /users/{userId} {
      allow read: if request.auth != null || request.auth == null;
      allow write: if (request.auth != null && request.auth.uid == userId) || request.auth == null;

      // Users can read anyone's playedGameSets to check for duplicates.
      // Users can only write to their own playedGameSets.
      match /playedGameSets/{playedGameSetId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Users can only manage their own incorrect-answers.
      match /incorrect-answers/{incorrectAnswerId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
