rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read anyone's profile, but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;

      // Users can read and write to their own answer subcollections.
      match /correct-answers/{answerId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /incorrect-answers/{answerId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Game sets are public to read for any authenticated user.
    // Only the creator can update or delete their own game sets.
    match /game-sets/{gameSetId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.creatorId;
      allow update, delete: if request.auth.uid == resource.data.creatorId;
    }

    // Game rooms are public to read for any authenticated user.
    // Any authenticated user can create/update a game room.
    match /game-rooms/{roomId} {
      allow read, write: if request.auth != null;
    }
  }
}
