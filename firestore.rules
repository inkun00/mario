
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Game Sets rules
    match /game-sets/{gameSetId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.creatorId == request.auth.uid;
    }

    // Users rules
    match /users/{userId} {
      // Allow any authenticated user to read user profiles (needed for nickname lookup)
      allow read: if request.auth != null;
      
      // Allow users to create, update, and delete their own document
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Game Rooms rules
    match /game-rooms/{roomId} {
        allow read, write: if request.auth != null;
    }
  }
}
