rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isServer() {
      return request.auth == null;
    }

    // `users` collection rules
    match /users/{userId} {
      // Allow authenticated users to read other users' profiles (for searching, etc.)
      allow read: if request.auth != null;
      // Allow users to update their own document, or allow server to update any
      allow update: if isOwner(userId) || isServer();
      // Allow users to create their own document, and allow server to create any
      allow create: if isOwner(userId) || isServer();
      // Only allow users to delete their own account
      allow delete: if isOwner(userId);

      // `playedGameSets` subcollection rules
      match /playedGameSets/{gameSetId} {
        // Allow any authenticated user to check if another has played a set
        allow read: if request.auth != null;
        // Only allow a user to write to their own played history
        allow write: if isOwner(userId);
      }
      
      // `incorrect-answers` subcollection rules
      match /incorrect-answers/{answerId} {
      	// Only allow owner to read/write their own incorrect answers
      	allow read, write: if isOwner(userId);
      }
    }
    
    // `game-sets` collection rules
    match /game-sets/{gameSetId} {
      allow read, create, update: if request.auth != null;
    }

    // `game-rooms` collection rules
    match /game-rooms/{roomId} {
      allow create, update: if request.auth != null;
    }
  }
}
